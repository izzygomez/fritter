<div id="tweets">

  <p>Welcome, {{currentUser}} (<a href="#" id="logout-link">logout</a>)</p>
  <p><a href="#" id="followers">Edit followers</a></p>
  <p><b>My Tweets</b> <a href="#" id="all-users-tweets">All tweets</a> <a href="#" id="followers-tweets">Follower's tweets</a></p>
  <div>
    <div class="error"></div>
    <label for="new-tweet-input">Add a new tweet:</label>
    <input type="text" id="new-tweet-input" />
    <button id="submit-new-tweet">Add</button>
  </div>

  <h1>My Tweets</h1>

  {{#each tweets}}
    {{> tweet}}
  {{else}}
    <p><em>You haven't tweeted yet! Go ahead and tweet above.</em></p>
  {{/each}}
</div>
